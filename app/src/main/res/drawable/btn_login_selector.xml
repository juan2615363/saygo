<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item
        android:state_pressed="true">

        <shape>
            <corners
                android:radius="25dp"/>
            <solid
                android:color="@color/myAppColor"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/myAppColor"/>
        </shape>

    </item>

    <item
        android:state_pressed="false">
        <shape>
            <corners
                android:radius="25dp"/>
            <solid
                android:color="@color/myAppColor"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/myAppColor"/>
        </shape>

    </item>


</selector>